@model DemoShop.DataLayer.DTO.Paging.BasePaging

<div class="shop_toolbar t_bottom">
    <div class="pagination">
        <ul>
            @if (Model.StartPage < Model.PageId)
            {
                <li class="previous"><a onclick="FillPageId(@(Model.PageId - 1))">قبلی</a></li>
            }
            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="@(Model.PageId == i ? "current" : "")" onclick="FillPageId(@i)">@i</li>
            }
            @if (Model.EndPage > Model.PageId)
            {
                <li class="next"><a onclick="FillPageId(@(Model.PageId + 1))">بعدی</a></li>
            }
        </ul>
    </div>
</div>